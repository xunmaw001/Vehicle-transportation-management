<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UsersDao">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        a.id as id
        ,a.username as username
        ,a.password as password
        ,a.role as role
        ,a.addtime as addtime
    </sql>
    <select id="selectListView" parameterType="map" resultType="com.entity.view.UsersView" >
        SELECT
        <include refid="Base_Column_List" />

--         级联表的字段

        FROM users  a

        <where>
            <if test="params.ids != null">
                and a.id in
                <foreach item="item" index="index" collection="params.ids" open="(" separator="," close=")">
                #{item}
                </foreach>
            </if>
            <if test=" params.username != '' and params.username != null and params.username != 'null' ">
                and a.username like CONCAT('%',#{params.username},'%')
            </if>
            <if test=" params.password != '' and params.password != null and params.password != 'null' ">
                and a.password like CONCAT('%',#{params.password},'%')
            </if>
            <if test=" params.role != '' and params.role != null and params.role != 'null' ">
                and a.role like CONCAT('%',#{params.role},'%')
            </if>
            <if test=" params.addtimeStart != '' and params.addtimeStart != null ">
                <![CDATA[  and UNIX_TIMESTAMP(a.addtime) >= UNIX_TIMESTAMP(#{params.addtimeStart}) ]]>
            </if>
            <if test=" params.addtimeEnd != '' and params.addtimeEnd != null ">
                <![CDATA[  and UNIX_TIMESTAMP(a.addtime) <= UNIX_TIMESTAMP(#{params.addtimeEnd}) ]]>
            </if>

        </where>
        order by a.${params.orderBy} desc
    </select>

</mapper>